{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2020",
        "jsx": "react",
        "strict": false,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "outDir": "build",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true
    },
    "include": ["src", "server.ts"],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}